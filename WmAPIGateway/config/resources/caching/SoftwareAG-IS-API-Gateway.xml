<ehcache     
    name="SoftwareAG.IS.API-Gateway.testCluster">    
    <diskStore         
        path="./cacheStore/SoftwareAG-IS-API-Gateway"/>    
    <defaultCache         
        maxEntriesLocalHeap="0"/>    
    <cache         
        name="ClusterNotifierCache"         
        eternal="true"         
        maxEntriesLocalHeap="100"         
        overflowToOffHeap="false">        
        <persistence             
            strategy="none"/>        
        <terracotta             
            clustered="false">            
            <nonstop                 
                immediateTimeout="true"                 
                timeoutMillis="45000"/>        
        </terracotta>    
    </cache>    
    <cache         
        name="MetricAccumulatorCache"         
        eternal="true"         
        maxEntriesLocalHeap="10000"         
        copyOnWrite="true"         
        copyOnRead="true"         
        overflowToOffHeap="false">        
        <persistence             
            strategy="none"/>        
        <terracotta             
            clustered="false">            
            <nonstop                 
                immediateTimeout="true"                 
                timeoutMillis="45000"/>        
        </terracotta>    
    </cache>    
    <cache         
        name="ClusterStatusCache"         
        eternal="true"         
        maxEntriesLocalHeap="100"         
        overflowToOffHeap="false">        
        <persistence             
            strategy="none"/>        
        <terracotta             
            clustered="false">            
            <nonstop                 
                immediateTimeout="true"                 
                timeoutMillis="45000"/>        
        </terracotta>    
    </cache>    
    <cache         
        name="RuntimePolicyCache"         
        eternal="true"         
        maxEntriesLocalHeap="100000"         
        copyOnWrite="true"         
        copyOnRead="true"         
        overflowToOffHeap="false">        
        <persistence             
            strategy="none"/>        
        <terracotta             
            clustered="false">            
            <nonstop                 
                immediateTimeout="true"                 
                timeoutMillis="45000"/>        
        </terracotta>    
    </cache>    
    <cache         
        name="MediatorServicesResultsCache"         
        maxEntriesLocalHeap="10000"         
        overflowToOffHeap="false">        
        <persistence             
            strategy="none"/>        
        <terracotta             
            clustered="false"             
            consistency="STRONG">            
            <nonstop                 
                immediateTimeout="true"                 
                timeoutMillis="45000"/>        
        </terracotta>        
        <searchable             
            keys="false"             
            values="false">            
            <searchAttribute                 
                name="virtualServiceName"                 
                expression="value.getVirtualServiceName()"                 
                type="String"/>        
        </searchable>    
    </cache>    
    <cache         
        name="EventsArchiveAndPurgeStatusCache"         
        eternal="true"         
        maxEntriesLocalHeap="10000"         
        overflowToOffHeap="false">        
        <persistence             
            strategy="none"/>        
        <terracotta             
            clustered="false">            
            <nonstop                 
                immediateTimeout="true"                 
                timeoutMillis="45000"/>        
        </terracotta>    
    </cache>    
    <cache         
        name="DenyByIPForFailedAuthCache"         
        eternal="true"         
        maxEntriesLocalHeap="100000"         
        copyOnWrite="true"         
        copyOnRead="true"         
        overflowToOffHeap="false">        
        <persistence             
            strategy="none"/>        
        <terracotta             
            clustered="false">            
            <nonstop                 
                immediateTimeout="true"                 
                timeoutMillis="45000"/>        
        </terracotta>    
    </cache>    
    <cache         
        name="IntervalNotificationCache"         
        eternal="true"         
        maxEntriesLocalHeap="10000"         
        copyOnWrite="true"         
        copyOnRead="true"         
        overflowToOffHeap="false">        
        <persistence             
            strategy="none"/>        
        <terracotta             
            clustered="false">            
            <nonstop                 
                immediateTimeout="true"                 
                timeoutMillis="45000"/>        
        </terracotta>    
    </cache>
</ehcache>
